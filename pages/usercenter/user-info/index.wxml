<view class="user-info">
  <t-cell-group>
    <t-cell title="头像" center="{{true}}" data-type="avatarUrl" bind:click="onClickCell" arrow>
      <t-image slot="note" src="{{personInfo.avatarUrl}}" t-class="avatarUrl" mode="aspectFill" />
    </t-cell>
    <t-cell
      title="昵称"
      arrow
      hover
      required
      note="{{personInfo.nickName || '请填写'}}"
      data-type="name"
      bind:click="onClickCell"
    />
    <t-cell
      title="性别"
      arrow
      hover
      required
      note="{{genderMap[personInfo.gender]}}"
      data-type="gender"
      bind:click="onClickCell"
    />
    <t-cell
      title="位置"
      hover
      required
      note="{{userLocation.name || '选择您偏好的上课地点'}}"
      right-icon="location"
      data-type="location"
      bind:click="onClickCell"
    />
    <t-cell
      bordered="{{false}}"
      title="手机号"
      required
      note="{{personInfo.phoneNumber ? personInfo.phoneNumber : '去绑定手机号'}}"
      data-type="phoneNumber"
      bind:click="onClickCell"
    />
  </t-cell-group>
</view>
<view class="user-info__wrapper">
  <view class="user-info__btn" bind:tap="openUnbindConfirm"> 切换账号登录 </view>
</view>
<t-select-picker
  show="{{genderPickerVisible}}"
  picker-options="{{pickerOptions}}"
  title="选择性别"
  value="{{personInfo.gender}}"
  bind:confirm="onConfirm"
  bind:close="onClose"
/>
<t-toast id="t-toast" />
