<view class="user-center-card">
  <!-- 已登录 -->
  <block wx:if="{{isLogin}}">
    <view class="user-center-card__header">
      <t-avatar
        class="user-center-card__header__avatar"
        image="{{userInfo.avatar || defaultAvatarUrl}}"
        bind:tap="gotoUserEditPage"
      />
      <view class="user-center-card__header__name" bind:tap="gotoUserEditPage">
        {{userInfo.nickname || '微信用户'}}
      </view>
      <t-tag variant="outline" shape="mark" bind:tap="showRolePopup">去认证</t-tag>
    </view>
  </block>

  <!-- 未登录的情况 -->
  <block wx:else>
    <view class="user-center-card__header">
      <t-avatar image="{{userInfo.avatarUrl || defaultAvatarUrl}}" class="user-center-card__header__avatar" />
      <t-button
        variant="text"
        hover-class="none"
        open-type="getPhoneNumber"
        bindgetphonenumber="getPhoneNumber"
        class="login-btn"
        >登录/注册</t-button
      >
    </view>
  </block>
</view>
